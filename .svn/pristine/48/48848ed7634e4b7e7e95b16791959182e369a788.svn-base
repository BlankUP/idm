@import "variable";

.btn{
    border-radius: @btn-radius;
    border: @dark-border-line;
    background: #fff;
    color: #666;
    padding: 6px 0px;
    box-sizing: border-box;
}
.textfield{
    border: 1px solid #e0e0e0;
    color: #999;
    font-size: 14px;
    margin: 0;
    vertical-align: middle;
    box-sizing: border-box;
    padding: 2px;
}
.input-small{
    width: 80px;
}
.input-mini{
    width: 40px;
}
.registform,.loginform{
    width: 240px;
    margin: 0px auto 0px auto;
    h3{
        text-align: center;
        margin: 0 0 20px 0;
        font-size: 18px;
    }
    li{
        position: relative;
        margin-top:10px;
        img.captcha{
            margin-left: 10px;
            vertical-align: middle;
            cursor: pointer;
        }
    }
    .fonticon{
        position: absolute;
        top: 10px;
        left: 8px;
        font-size: 15px;
        color: #999;
    }
    .btn{
        border-color: @main-color;
        border-style: dashed;
        color: @main-color;
        background: lighten(@main-color,40%);
    }
    button,.textfield{
        width: 100%;
        box-sizing: border-box;
        padding: 6px 5px;
        font-size: 14px;
    }
    .textfield{
        border-radius: @input-radius;
        padding-left: 30px;
//        padding: 6px 5px 6px 30px;
    }
    button{
        margin-top:10px;
    }
}