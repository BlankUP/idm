//
// Var
// --------------------------------------------------


// Global values
// --------------------------------------------------

// system colors
// -------------------------
// Grays
// -------------------------
@black:                 #000;
@grayDarker:            #333;
@grayDark:              #707070;
@gray:                  #999;
@grayLight:             #ccc;
@grayLighter:           #e9e9e9;
@whiteGray:             #f5f5f5;
@white:                 #fff;

// Accent colors
// -------------------------
@green:                 #468847; //new
@greenLight:            #89c495;
@greenLighter:          #dff0d8; //new

@greenGrey:             #2b5948; //深绿


@red:                   #b94a48; 
@pink:                  #f2dede; 

@yellowGrey:			#c09853; //new
@yellow:                #ffd351;
@yellowLight:           #ffe9a8;
@yellowLighter:         #fcf8e3;  //new

@blueGrey:              #4a6785; //深蓝
@blue:					#205081;
@blueLight:             #2c5e9b; //亮点的蓝
@blueLightGrey:			#3b73af; 
@blueLighter:			#6299d0; //高亮的蓝
@whiteBlue:				#d9edf7; //白蓝 new

@orange:                #f89406; //橙色

// skin colors
// -------------------------
@mainColor:             #367c62; //绿
@lightColor:            #49a382; //绿色
@lighterColor:          #89c495; 
@textColor:             @grayDarker; // inherit,#333
@darkBackground:        @whiteGray; // inherit,#f5f5f5
@lightBackground:       @white; // inherit, #fff

// -----------------------------------------------------------------------------------------------



// Typography  
// -------------------------
@sansFontFamily:        "Helvetica Neue", Helvetica, "Microsoft YaHei", Arial, "宋体", sans-serif;
@serifFontFamily:       @sansFontFamily;
@monoFontFamily:        @sansFontFamily;
@baseFontFamily:        @sansFontFamily;
@altFontFamily:         @sansFontFamily;


@baseFontSize:          14px;

@baseNoneValue:			none;

@headingsFontFamily:    "Helvetica Neue", Helvetica, "Microsoft YaHei", Arial, "宋体", sans-serif; // @baseFontFamily
@headingsFontWeight:    bold;    // 
@headingsColor:         @textColor; //  #333


// Component sizing
// -------------------------
// Based on 14px font-size and 20px line-height

@fontSizeLarge:         @baseFontSize * 1.25; // ~18px
@fontSizeSmall:         @baseFontSize * 0.85; // ~12px
@fontSizeMini:          @baseFontSize * 0.75; // ~11px

@paddingLarge:          11px 19px; // 44px
@paddingSmall:          2px 10px;  // 26px
@paddingMini:           0 6px;   // 22px

@baseGapLarge:			10px;
@baseGapSmall:			5px;
@baseGapMini:			1px;

@baseBorderRadius:      4px;
@borderRadiusLarge:     6px;
@borderRadiusSmall:     3px;


// Scaffolding
// -------------------------
@bodyBackground:        @white; // inherit, #fff
@contentBackground:		@white;
@textColor:             @grayDarker; // inherit, #333

@baseLineHeight:        20px;

@baseBorder:			1px solid @grayLight;
@baseOpacity:			1;


// Links
// -------------------------
@linkColor:             @lightColor; //@blueLight
@linkColorHover:        darken(@linkColor, 15%); 



// Tables 表格
// -------------------------
@tableBackground:                   transparent; // overall background-color
@tableBackgroundAccent:             @whiteGray; // for striping #f5f5f5
@tableBackgroundHover:              @grayLighter; // #e9e9e9
@tableBorder:                       @grayLight; //#ccc


// Forms 表单
// -------------------------
@inputBackground:               @white; // #fff
@inputBorder:                   @grayLight; //#ccc
@inputBorderRadius:             @baseBorderRadius; // 圆角 4px
@inputDisabledBackground:       @grayLighter; // inherit, #e9e9e9
@formActionsBackground:         @whiteGray; //#f5f5f5
@inputHeight:                   @baseLineHeight + @baseGapLarge; // 20px+10px=30px


// Buttons   按钮
// -------------------------
// color 值
@btnBackground:                     @whiteGray; // 灰色，＃f5f5f5
@btnBackgroundHighlight:            darken(@whiteGray, 3%); // 默认样式hover color
@btnBorder:                         @grayLight; //#ccc
@btnBorderHighlight:                @gray; // 灰，#999
@btnColor:                          @grayDarker; // 深灰，＃333
@btnBorderRadius:             		@baseBorderRadius; //按扭圆角大小 4px

@btnPrimaryBackground:              @mainColor; // 蓝色
@btnPrimaryBackgroundHighlight:     lighten(@btnPrimaryBackground, 8%); // 重点按钮样式hover color
@btnPrimaryBorder:                  darken(@btnPrimaryBackground, 10%);
@btnPrimaryColor:                   @white;  // 白色,#fff
@btnPrimaryVisited:                 @mainColor; // 蓝
@btnShadeWhite:						@blueLighter;
@btnShadeLighter:					@mainColor;

@btnDisabledBackground:             @grayLighter; // , #e9e9e9
@btnDisabledPrimaryBackground:      @btnPrimaryBackground; // 蓝色
@btnDisabledBorder:                 @btnBorder;  //   #ccc

@btnLinkBackground:                 transparent; // 透明

@btnInverseColor:                   @lighterColor; // blue

// numerical value 数值
@btnBackgroundOpacity:              @baseOpacity/2; // 1/2
@btnBorderSpace:                    4px;
@btnBorderWidth:                    @baseGapMini;  //1px
@btnLineHeight:                     @baseLineHeight; // 20px


// Button Group
// -------------------------
//按扭组边框圆角大小
@btnGrpBorderRadius:				@btnBorderRadius; //4px
//按扭左间距
@btnGrpMarginLeft: 					@baseGapSmall; // 5px





// COMPONENT VARIABLES
// --------------------------------------------------


// Z-index master list
// -------------------------
// Used for a bird's eye view of components dependent on the z-axis
// Try to avoid customizing these :)
@zindexDropdown:          1000;
@zindexPopover:           1010;
@zindexTooltip:           1030;
@zindexFixedNavbar:       1030;
@zindexModalBackdrop:     1040;
@zindexModal:             1050;


// Sprite icons path  图标
// -------------------------

//image folder
@imageFolderPath:		  "../image";

@iconSize:					16px;
@menuIconSize:				16px; //菜单图标宽度，如果不启用图标，则将值设置为0
@iconSpritePath:			"@{imageFolderPath}/glyphicons-halflings";
@iconWhiteSpritePath:		"@{imageFolderPath}/glyphicons-halflings-white";



// Input placeholder text color
// -------------------------
@placeholderText:         @grayLight; // inherit, #ccc


// Hr border color
// -------------------------
@hrBorder:                @grayLighter; // inherit, #e9e9e9


// Horizontal forms & lists
// -------------------------
@horizontalComponentOffset:       180px;


// Wells
// -------------------------
@wellBackground:                  #f5f5f5;


// Nav  menu  菜单和下拉
// --------------------------------------------
@navOpacity:						1;

@navBarBackground:					@mainColor; // #205081
@navBarBorder:						1px solid @blueGrey; // #4a6785

@navGroupBackground:				@darkBackground; //#f5f5f5
@navGroupBorder:					@baseBorder; // #ccc
@navGroupActiveBackground:			@grayLighter; //#e9e9e9 背景
@navGroupFontColor:                 @lightColor; //#3b73af 蓝色
@navGroupSelectedColor:				@textColor; //#333 字体
@navGroupFontFanily:				@baseFontFamily;
@navGroupFontSize:					@baseFontSize; //字体大小 14px

@menuOpacity:						@navOpacity;
@menuFontFanily:					@baseFontFamily;
@menuFontSize:						1em; // 14px
@menuFontColor:						@white; // #fff
@menuBcakground:					@baseNoneValue; // none
@menuBorder:						@baseNoneValue;

@menuitemSplitBorder:				@baseNoneValue;
@menuActiveBackground:				@lighterColor; // 
@menuitemPaddingTop:				0.7em;
@menuitemPaddingRight:				@baseGapLarge;
@menuitemPaddingBottom:				0.7em;
@menuitemPaddingLeft:				@baseGapLarge; // 10px

//------- 子菜单 -----------
@submenuBackground:					@white; // #fff
@submenuBorder:						1px solid @grayLight;
@submenuActiveBackground:			@lighterColor; // #3b73af

@submenuFontFanily:					@menuFontFanily;
@submenuFontSize:					@menuFontSize;
@submenuFontColor:					@grayDarker; // #333
@submenuActiveFontColor:			@white;

@submenuitemPaddingTop:				0.3em;
@submenuitemPaddingRight:			@menuIconSize + 5px;
@submenuitemPaddingBottom:			0.3em;
@submenuitemPaddingLeft:			@menuIconSize + 5px; // 16px+5px
// @submenuIconOffsetTop:				10px;



// Pagination 分页图标
// -------------------------
@paginationColor:						@grayDark;
@paginationBackground:					@white;
@paginationBorder:						@grayLight;
@paginationActiveBackground:			@grayLight;
@paginationHoverBackground:				@grayLighter;


// // Hero unit
// // -------------------------
// @heroUnitBackground:              @grayLighter; // inherit, #e9e9e9
// @heroUnitHeadingColor:            inherit;
// @heroUnitLeadColor:               inherit;


// Form states and alerts 表单验证时可选用颜色
// -------------------------
@warningText:					@yellowGrey; //#c09853;
@warningBackground:				@yellowLighter; //#fcf8e3;
@warningBorder:					darken(spin(@warningBackground, -10), 3%);

@errorText:						@red; // #b94a48;
@errorBackground:				@pink;  //#f2dede
@errorBorder:					darken(spin(@errorBackground, -10), 3%);

@successText:					@green; //#468847;
@successBackground:				@greenLighter; // #dff0d8;
@successBorder:					darken(spin(@successBackground, -10), 5%);

@infoText:						@blue; //
@infoBackground:				@whiteBlue; //
@infoBorder:					darken(spin(@infoBackground, -10), 7%);


// Tooltips
// -------------------------
@tooltipText:             		@grayDarker;
@tooltipBackground:       		@whiteGray;
@tooltipBorder:			  		darken(spin(@tooltipBackground, -10), 7%);


// Tabs  tab页
// -------------------------
@tabsBorderWidth:				@baseGapMini;  //1px
@tabsBorderColor:				@grayLight;
@tabsBackgroundColor:			@grayLighter;
@tabsHoverBackgroundColor:		@whiteGray;
@tabsActiveBackgroundColor:		@white;
@tabsPaddingY:					4px; //纵向padding
@tabsPaddingX:					@baseGapLarge; //横向padding10px



// GRID
// --------------------------------------------------


// Default 940px grid
// -------------------------
@gridColumns:             12;
@gridColumnWidth:         70px;
@gridGutterWidth:         10px;
@gridRowWidth:            (@gridColumns * @gridColumnWidth) + (@gridGutterWidth * (@gridColumns - 1));

// 1200px min
@gridColumnWidth1200:     90px;
@gridGutterWidth1200:     10px;
@gridRowWidth1200:        (@gridColumns * @gridColumnWidth1200) + (@gridGutterWidth1200 * (@gridColumns - 1));

// 768px-979px
@gridColumnWidth768:      52px;
@gridGutterWidth768:      10px;
@gridRowWidth768:         (@gridColumns * @gridColumnWidth768) + (@gridGutterWidth768 * (@gridColumns - 1));


// Fluid grid
// -------------------------
@fluidGridColumnWidth:			percentage(@gridColumnWidth/@gridRowWidth);
@fluidGridGutterWidth:			percentage(@gridGutterWidth/@gridRowWidth);

// 1200px min
@fluidGridColumnWidth1200:     percentage(@gridColumnWidth1200/@gridRowWidth1200);
@fluidGridGutterWidth1200:     percentage(@gridGutterWidth1200/@gridRowWidth1200);

// 768px-979px
@fluidGridColumnWidth768:      percentage(@gridColumnWidth768/@gridRowWidth768);
@fluidGridGutterWidth768:      percentage(@gridGutterWidth768/@gridRowWidth768);
